FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# OS deps for mysqlclient, etc.
RUN apt-get update && apt-get install -y --no-install-recommends \ 
    default-libmysqlclient-dev build-essential pkg-config \ 
    && rm -rf /var/lib/apt/lists/*

# Copy app (must include requirements.txt inside backend_app/)
COPY backend_app/ ./

# Install Python deps
RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 5000

# If your Flask app exposes 'app = Flask(__name__)' in app.py, this is robust:
CMD ["flask", "--app", "app:app", "run", "--host=0.0.0.0", "--port=5000"]
