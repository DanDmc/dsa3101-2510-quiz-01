FROM python:3.10-slim
WORKDIR /app
COPY backend_app/ ./

RUN apt-get update && apt-get install -y \
    default-libmysqlclient-dev \
    build-essential \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*
    
RUN pip install --no-cache-dir -r requirements.txt
EXPOSE 5000
CMD ["flask", "-A", "app.py", "run", "--port=5000", "--host=0.0.0.0"]
